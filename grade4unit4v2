    function submitForm() {
        var formData = {
            name: document.getElementById("name").value,
            q1: document.querySelector('input[name="q1"]:checked')?.value || "",
            q2: document.querySelector('input[name="q2"]:checked')?.value || "",
            q3: document.querySelector('input[name="q3"]:checked')?.value || "",
            essay1: document.getElementById("essay1").value,
            q5: document.querySelector('input[name="q5"]:checked')?.value || "",
            essay2: document.getElementById("essay2").value,
            q7: document.querySelector('input[name="q7"]:checked')?.value || "",
            q8: document.querySelector('input[name="q8"]:checked')?.value || "",
            q9: document.querySelector('input[name="q9"]:checked')?.value || "",
            q10: document.querySelector('input[name="q10"]:checked')?.value || ""
        };

        fetch("https://script.google.com/a/macros/u-46.org/s/AKfycbzT_hbZODQWg7pUgQjKoEHLORIgWugO_SNVIyKtonlUSlSnU1tDRT8jUB1k9yzPeCBXMQ/exec", {  // Replace with your actual Web App URL
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(formData)
        })
        .then(response => response.text())
        .then(data => alert("Your responses have been submitted!"))
        .catch(error => console.error("Error:", error));
    }
</script>

